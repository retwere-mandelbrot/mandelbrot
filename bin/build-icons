#!/bin/sh
#   build-icons -- makes a little mandelbrot set image to use as an icon.

# Prereq: mandelbrot must be checked out in ../mandelbrot
cd ../mandelbrot

# Build the release version
cargo build -r

# Generate the icon using the release version.
./target/release/mandelbrot -o ../mandelbrot-client/build/icon.png --x-res 512 --y-res 512 --x-min -2.0 --x-max 0.5 --y-min -1.25 --y-max 1.25
